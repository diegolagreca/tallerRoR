<p id="notice"><%= notice %></p>
    <h2>Lista de incidentes</h2>

   <div class="jumbotron center">

  <div>
    <h3><span class="glyphicon glyphicon-filter" aria-hidden="true"></span> Filtrar incidentes</h3>

<!-- Filtro de busqueda -->
  <%= search_form_for @q do |f| %>
    <%= f.condition_fields do |c| %>
      <%= render "condition_fields", f: c %>
    <% end %>
    <%= f.submit "Filtrar"%>
  <% end %>
  
  <!-- GeneraciÃ³n de tabla de incidentes -->
  </div>
   <div class="panel-heading">
      <table class="table">
        <thead>
          <tr>
            <th><%= sort_link @q, :id, "ID" %></th>
            <th><%= sort_link @q, :asunto, "Asunto" %></th>
            <th><%= sort_link @q, :descripcion, "Descripcion" %></th>
            <th><%= sort_link @q, :responsable, "Responsable" %></th>
            <th><%= sort_link @q, :tipo, "Tipo" %></th>
            <th><%= sort_link @q, :prioridad, "Prioridad" %></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @incidentes.each do |incidente| %>
            <tr>
              <td><%= incidente.id %></td>
              <td><%= incidente.asunto %></td>
              <td><%= incidente.descripcion %></td>
              <td><%= incidente.responsable %></td>
              <td><%= incidente.tipo %></td>
              <td><%= incidente.prioridad %></td>
              <td><%= link_to 'Mostrar', incidente %></td>
              <td><%= link_to 'Editar', edit_incidente_path(incidente) %></td>
              <td><%= link_to "Borrar", incidente_path(incidente), method: :delete, form_class: 'destroy_button', data: { confirm: "Se eliminara el incidente de forma permanente Â¿Desea continuar?" } %>  
              </td>      
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @incidentes %>
      <br>
      </div>
          <button type="button" class="btn btn-default btn-lg" onclick="location.href='<%= new_incidente_path %>'">
                <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> Nuevo incidente
          </button>
    </div>





