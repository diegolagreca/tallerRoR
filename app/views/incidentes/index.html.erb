    <div class="jumbotron center">
        <h1>Página Principal</h1>
        <table class="table">
            <div class="panel panel-default">
          <!-- Default panel contents -->
          <div class="panel-heading">
    
            <h2>Lista Incidentes</h2>
          <div class="panel-body">

             <tr>
        	    <th><h3><%= sortable "id", "ID" %></h3></th>
        		<th><h3><%= sortable "asunto", "Asunto" %></h3></th>
        		<th><h3><%= sortable "descripcion", "Descripcion" %></h3></th>
        		<th><h3><%= sortable "responsable", "Responsable" %></h3></th>
        		<th><h3><%= sortable "tipo", "Tipo" %></h3></th>
        		<th><h3><%= sortable "prioridad", "Prioridad" %></h3></th>
              </tr>
            <% @incidentes.each do |p| %>
        	<tr>
        		<th><%= p.id %></th>
        		<th><%= p.asunto %></th>
        		<th><%= p.descripcion %></th>
        		<th><%= p.responsable %></th>
        		<th><%= p.tipo %></th>
        		<th><%= p.prioridad %></th>
            	<th><button type="button" class="btn btn-default btn-lg" onclick="location.href='<%= edit_incidente_path(p) %>'">
                      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar
                    </button>
                </th>
                <th><button type="button" class="btn btn-default btn-lg">
                      <span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>
                    </button>
                </th>
                <td>
                    <%= link_to "Borrar", incidente_path(p), method: :delete, form_class: 'destroy_button', data: { confirm: "Se eliminara el incidente de forma permanente ¿Desea continuar?" } %>  
                </td>
        	</tr>
        <% end %>
    </table>
    <button type="button" class="btn btn-default btn-lg" onclick="location.href='<%= new_incidente_path %>'">
          <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> Nuevo incidente
    </button>
</button>




</div>